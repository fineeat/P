<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridRestaurantCardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/single_grid_margin_top"
        android:layout_marginBottom="@dimen/single_grid_margin_bottom">
        <TextView
            android:id="@+id/gridRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant name"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/gridRestaurantName"
            style="@style/Body1">
        </TextView>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/gridRestaurantImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/gridRestaurantLocation"
            android:layout_marginTop="@dimen/smaller_margin"
            fresco:placeholderImage="@color/unloadImages"
            fresco:fadeDuration="300">
        </com.facebook.drawee.view.SimpleDraweeView>

        <ToggleButton
            android:id="@+id/gridRestaurantToggleButtonFav"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            style="@style/toggleButton"
            android:layout_below="@id/gridRestaurantImage"
            android:background="@drawable/fav_toggle_bg"/>

        <Button
            android:id="@+id/gridRestaurantButtonShare"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_below="@id/gridRestaurantImage"
            android:layout_toRightOf="@id/gridRestaurantToggleButtonFav"
            android:background="@drawable/share"/>

        <View
            android:id="@+id/dividerTabLayoutGridSearch"
            android:layout_width="match_parent"
            android:layout_height="2px"
            style="@style/Margin"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider"
            android:layout_below="@+id/gridRestaurantToggleButtonFav"/>

        <TextView
            android:id="@+id/gridRestaurantAveragePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$$$$$"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/dividerTabLayoutGridSearch"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuisine"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/gridRestaurantAveragePrice"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/gridRestaurantCuisine"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant long description"
            android:layout_below="@id/gridRestaurantCategory"
            style="@style/Body1">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:layout_marginTop="@dimen/activity_double_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/gridRestaurantDescription"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03-97281182"
            android:layout_below="@id/gridRestaurantContact"
            style="@style/Body1">
        </TextView>

        <TextView
            android:id="@+id/gridRestaurantWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.restaurant.com"
            android:layout_below="@id/gridRestaurantPhone"
            style="@style/Body1">
        </TextView>

    </RelativeLayout>
</android.support.v7.widget.CardView>