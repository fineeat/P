<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridSearchCardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_view_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/single_grid_margin_top"
        android:layout_marginBottom="@dimen/single_grid_margin_bottom">
        <TextView
            android:id="@+id/gridSearchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant name"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridSearchLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/gridSearchName"
            style="@style/Body1">
        </TextView>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/gridSearchImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/gridSearchLocation"
            android:layout_marginTop="@dimen/smaller_margin"
            fresco:placeholderImage="@color/unloadImages"
            fresco:fadeDuration="300">
        </com.facebook.drawee.view.SimpleDraweeView>

        <ToggleButton
            android:id="@+id/gridSearchToggleButtonFav"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            style="@style/toggleButton"
            android:layout_below="@id/gridSearchImage"
            android:background="@drawable/fav_toggle_bg"/>

        <Button
            android:id="@+id/gridSearchButtonShare"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:layout_below="@id/gridSearchImage"
            android:layout_toRightOf="@id/gridSearchToggleButtonFav"
            android:background="@drawable/share"/>

        <View
            android:id="@+id/dividerTabLayoutGridSearch"
            android:layout_width="match_parent"
            android:layout_height="2px"
            style="@style/Margin"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider"
            android:layout_below="@+id/gridSearchToggleButtonFav"/>

        <TextView
            android:id="@+id/gridSearchCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuisine"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/dividerTabLayoutGridSearch"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridSearchCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/gridSearchCuisine"
            style="@style/Body2">
        </TextView>

        <TextView
            android:id="@+id/gridSearchDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurant short description"
            android:layout_below="@id/gridSearchCategory"
            style="@style/Body1">
        </TextView>

    </RelativeLayout>
</android.support.v7.widget.CardView>