<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="35dp">

    <TextView
        android:id="@+id/grid1xName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant name"
        style="@style/RestaurantNameText">
    </TextView>

    <TextView
        android:id="@+id/grid1xLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/grid1xName"
        style="@style/RestaurantLocationText">
    </TextView>

    <ImageView
        android:id="@+id/grid1xImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@id/grid1xLocation"
        android:src="@drawable/restaurant1">
    </ImageView>

    <ToggleButton
        android:id="@+id/toggleButtonFav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        style="@style/toggleButton"
        android:layout_below="@id/grid1xImage"
        android:background="@drawable/fav_toggle_bg"/>

    <Button
        android:id="@+id/ButtonShare"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_below="@id/grid1xImage"
        android:layout_toRightOf="@id/toggleButtonFav"
        android:background="@drawable/share"/>

    <View
        android:id="@+id/dividerTabLayoutGrid1x"
        android:layout_width="match_parent"
        android:layout_height="2px"
        style="@style/Margin"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/listDivider"
        android:layout_below="@+id/toggleButtonFav"/>

    <TextView
        android:id="@+id/grid1xCuisine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuisine"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/dividerTabLayoutGrid1x"
        style="@style/RestaurantBodyBold">
    </TextView>

    <TextView
        android:id="@+id/grid1xOccasion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/grid1xCuisine"
        style="@style/RestaurantBodyBold">
    </TextView>

    <TextView
        android:id="@+id/grid1xPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promotion message"
        android:layout_below="@id/grid1xOccasion"
        style="@style/RestaurantBody">
    </TextView>


</RelativeLayout>